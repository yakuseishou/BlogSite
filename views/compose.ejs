<%- include('partial/header'); -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="newTitle">Title</label>
        <input type="text" class="form-control" name="newTitle" id="newTitle">
    </div>
    
    <div class="form-group">
        <label for="newPost">Post</label>
        <textarea class="form-control" name="newPost" id="newPost" rows="3"></textarea>
    </div>

    <button class="btn btn-lg btn-primary" type="submit">Publish</button>
</form>

<%- include('partial/footer'); -%> 